{
  "name": "weavr",
  "version": "0.1.0",
  "description": "Self-hosted workflow automation with AI agents. Weave your workflows together.",
  "type": "module",
  "bin": {
    "weavr": "./weavr.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/sdk/index.d.ts",
      "import": "./dist/plugins/sdk/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/cli/program.ts",
    "dev:web": "vite --config src/web/vite.config.ts",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "tsdown src/index.ts src/cli/program.ts src/plugins/sdk/index.ts --format esm --dts",
    "build:web": "vite build --config src/web/vite.config.ts",
    "start": "node dist/cli/program.js",
    "serve": "tsx src/cli/program.ts serve",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "@hono/node-server": "^1.13.8",
    "@mariozechner/pi-ai": "^0.51.6",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "@xyflow/react": "^12.10.0",
    "better-sqlite3": "^11.5.0",
    "chalk": "^5.4.1",
    "chokidar": "^5.0.0",
    "clipboardy": "^5.1.0",
    "commander": "^13.1.0",
    "croner": "^9.0.0",
    "hono": "^4.7.4",
    "node-notifier": "^10.0.1",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^22.12.0",
    "@types/node-notifier": "^8.0.5",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.14",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.11.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.0",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Openweavr/Openweavr.git"
  },
  "keywords": [
    "automation",
    "workflow",
    "ai",
    "self-hosted",
    "zapier",
    "n8n",
    "integrations",
    "cli"
  ],
  "author": "",
  "license": "MIT"
}
